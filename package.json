{
  "name": "virus-game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:server": "tsx server.ts",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "start:next": "next start",
    "lint": "next lint",
    "generate-assets": "tsx scripts/generate-assets.ts",
    "generate-assets:cards": "tsx scripts/generate-assets.ts --type=cards",
    "generate-assets:icons": "tsx scripts/generate-assets.ts --type=icons",
    "generate-assets:backgrounds": "tsx scripts/generate-assets.ts --type=backgrounds",
    "simulate": "tsx src/simulator/run-simulation.ts",
    "simulate:quick": "tsx src/simulator/run-simulation.ts --count 1000 --verbose",
    "simulate:debug": "tsx src/simulator/run-simulation.ts --count 100 --verbose",
    "analyze:deck": "tsx src/simulator/analyze-deck.ts"
  },
  "dependencies": {
    "driver.js": "^1.4.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.0",
    "eslint": "^8",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
